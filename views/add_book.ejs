<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Meta settings -->
  <meta charset="UTF-8" />
  <title>Add a New Book</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- Custom stylesheet -->
  <link rel="stylesheet" href="/styles/add_book.css" />
</head>

<body>
  <!-- Main container -->
  <div class="container py-5">

    <!-- Page Heading -->
    <h1 class="mb-4">Add a New Book</h1>

    <!-- Book submission form -->
    <form action="/add_book" method="POST">

      <!-- Book Title Input -->
      <div class="form-group mb-3">
        <label for="title">Book Title</label>
        <input type="text" id="title" name="title" class="form-control" required />
      </div>

      <!-- Author Input -->
      <div class="form-group mb-3">
        <label for="author">Author</label>
        <input type="text" id="author" name="author" class="form-control" />
      </div>

      <!-- Rating Input -->
      <div class="form-group mb-3">
        <label for="rating">Rating (0–5)</label>
        <input type="number" id="rating" name="rating" class="form-control" min="0" max="5" step="0.1" required />
      </div>

      <!-- Notes Textarea -->
      <div class="form-group mb-3">
        <label for="notes">Short Notes</label>
        <textarea id="notes" name="notes" rows="2" class="form-control"></textarea>
      </div>

      <!-- Summary Textarea -->
      <div class="form-group mb-3">
        <label for="notes">Summary</label>
        <textarea id="summary" name="summary" rows="6" class="form-control"></textarea>
      </div>

      <!-- Submit Button -->
      <button type="submit" class="btn btn-primary">Add Book</button>
    </form>

    <!-- Back to home link -->
    <a href="/" class="btn btn-link mt-3">← Back to Home</a>
  </div>

  <!-- Bootstrap JS (for modal, dropdown, etc.) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>